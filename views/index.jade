doctype html(lang='en')
head
  meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1., user-scalable=no, target-densityDpi=device-dpi')
  meta(charset='UTF-8')
  link(href='http://fonts.googleapis.com/css?family=Lato:100,300', rel='stylesheet', type='text/css')
  link(rel='stylesheet', href='/style.css')

  title Seaside Heights Dashboard
  body
    .container
      header
        h2 Seaside Heights Dashboard
        .buttons
          //.butt.today.selected today
          //.butt.tomorrow tomorrow
      .event.weather
        h2
          if currentWeather
            | currently
            | #{parseInt(currentWeather.temperature)}&deg;F
        p #{weather.summary}
      - each event in events
        if(event>now)
        .event(class=event.event)
          h4 
            =event.event
          h2
            =event.time.format('h:mm a')
      footer
        a(href='http://thomasmilburn.com') tom milburn
